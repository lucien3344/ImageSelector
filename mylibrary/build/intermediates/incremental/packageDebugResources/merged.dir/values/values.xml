<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="bottomBar_color">#AA000000</color>
    <color name="colorAccent">#FFFFFF</color>
    <color name="colorPrimary">#FFFFFF</color>
    <color name="colorPrimaryDark">#FFFFFF</color>
    <color name="transparent">#00000000</color>
    <declare-styleable name="CircleImageView">
        <attr format="dimension" name="civ_border_width"/>
        <attr format="color" name="civ_border_color"/>
        <attr format="boolean" name="civ_border_overlay"/>
        <attr format="color" name="civ_fill_color"/>
    </declare-styleable>
    <declare-styleable name="RoundImageView">
        <attr format="dimension" name="riv_corner_radius"/>
        <attr format="dimension" name="riv_corner_radius_top_left"/>
        <attr format="dimension" name="riv_corner_radius_top_right"/>
        <attr format="dimension" name="riv_corner_radius_bottom_left"/>
        <attr format="dimension" name="riv_corner_radius_bottom_right"/>
        <attr format="dimension" name="riv_border_width"/>
        <attr format="color" name="riv_border_color"/>
        <attr format="boolean" name="riv_mutate_background"/>
        <attr format="boolean" name="riv_oval"/>
        <attr name="android:scaleType"/>
        <attr name="riv_tile_mode">
            <enum name="clamp" value="0"/>
            <enum name="repeat" value="1"/>
            <enum name="mirror" value="2"/>
        </attr>
        <attr name="riv_tile_mode_x">
            <enum name="clamp" value="0"/>
            <enum name="repeat" value="1"/>
            <enum name="mirror" value="2"/>
        </attr>
        <attr name="riv_tile_mode_y">
            <enum name="clamp" value="0"/>
            <enum name="repeat" value="1"/>
            <enum name="mirror" value="2"/>
        </attr>
    </declare-styleable>
    <string name="all_images">所有图片</string>
    <string name="app_name">ImageSelector</string>
    <string name="confirm_format">%1$s(%2$d/%3$d)</string>
    <string name="maxnum">最多选择%1$d张图片</string>
    <string name="minnum">最少选择一张图片</string>
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <style name="DownShowDialog" parent="Theme.AppCompat.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowAnimationStyle">@style/PopupAnimBottom</item>
    </style>
    <style name="PopupAnimBottom" parent="@android:style/Animation">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowEnterAnimation">@anim/popup_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/popup_bottom_out</item>
    </style>
    <style name="PopupAnimTop" parent="@android:style/Animation">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowEnterAnimation">@anim/popup_top_in</item>
        <item name="android:windowExitAnimation">@anim/popup_bottom_out</item>
    </style>
    <style name="SelTheme" parent="@style/BaseAppTheme"/>
</resources>